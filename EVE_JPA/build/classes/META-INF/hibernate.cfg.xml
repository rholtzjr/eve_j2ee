<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory name="eve">
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.password">adminadmin</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=eve</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.default_catalog">eve</property>
        <property name="hibernate.default_schema">dbo</property>
    </session-factory>
</hibernate-configuration>
